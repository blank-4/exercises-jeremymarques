block content
  h1= title
  p Welcome to #{title}
  p POST
    form(action="/" method="POST")
      input(type="text" name="username" placeholder="username")
      br
      input(type="password" name="pass" placeholder="password")
      br
      input(type="submit" name="sub" value="envoyer")
  p GET
    form(action="/login" method="GET")
      input(type="text" name="username" placeholder="username")
      br
      input(type="password" name="pass" placeholder="password")
      br
      input(type="submit" name="sub" value="envoyer")